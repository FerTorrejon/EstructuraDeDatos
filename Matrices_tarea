			}
		case 8 :
			{   M3.diagonal();

				break;
			}
        case 0: break;
        }
    }while (opcion != 0);
 
  getch();
}


#pragma once
#define N 10
#define M 10
class Serie
{
private :
	int V[100],n;
public:
	Serie(void);
	void Nueve ();
	void odi();
	void mostrar(int mat[N][M], int n, int m);
	void cargarSerie4 (int mat[N][M], int n, int m);
	int  sumaDig(int n);
	void cargarSerie3(int mat[N][M], int n, int m);

	~Serie(void);
};


#include "StdAfx.h"
#include "Serie.h"
#include <iostream>
 using namespace std ;
#define N 10
#define M 10


Serie::Serie(void)
{
}
Serie::~Serie(void)
{
}

void Serie::Nueve()
{ cout<<"ingrese limite de la serie ";
  cin>>n;
  int cont=1,d,D,u ;
  for (int i=0;i<n;i++)
     { if (cont<4) { V[i]=cont*cont;cont++;}
	 else { d=cont*cont;
	        D=d/10;
			u=d%10;
			V[i]=(u*10)+D; cont++;
	      }
     }
  for (int i=0;i<n;i++)
   {cout<<V[i]<<"  ";
   }
}

void Serie::odi()
{
    for(int a=3; a<=36; a=a+3)
       {
          V[a]=a;
          cout<<V[a]<<" ";
       }
}

int Serie::sumaDig(int n)
{ int d,s=0;
  while(n>0)
  { d=n%10; 
    n=n/10;
	s=s+d;
  }
return(s);
}

void Serie::cargarSerie3(int mat[N][M] ,int n, int m)
{ int i,j,d=1,Num=0;
  for(i=0;i<n;i++)
  { for(j=0;j<m;j++)
      { Num=Num+d;
        d =sumaDig(Num);
		mat[i][j]=Num;
      }
  }
}


void Serie::cargarSerie4(int mat[N][M], int n, int m)
{  int i,j,d=1,Num=0;
   for(i=0;i<n;i++){
       for(j=0;j<m;j++){
           Num=Num+d;
       d=sumaDig(Num);
       mat[i][j]=d;
       }
   }
}

void Serie::mostrar(int mat[N][M], int n, int m){

 int i,j;
 for(i=0;i<n;i++)
   { for(j=0;j<m;j++)
	   { cout<<mat[i][j]<<" ";
       }cout<<endl;
   }
}





// P3 Parte2.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "conio.h"
#include<iostream>
#include "Serie.h"
 using namespace std;

void main()
{ int opc ;
  int nrow,ncol, mat3[10][10],mat4[10][10];
    do{
        cout<<"ingrese num fil: ";
        cin>>nrow;
    }while(nrow<0||nrow>10);

    do{
        cout<<"ingrese num col: ";
        cin>>ncol;
    }while(ncol<0||ncol>10);
  Serie m3;
  Serie m4;
 do{
  cout<<"     MENU     "<<endl;
  cout<<" 1.-  Serie multiplos de 3 "<<endl;
  cout<<" 2.-  Serie numeros elevados "<<endl;
  cout<<" 3.-  Serie 3 "<<endl;
  cout<<" 4.-  Serie 4 "<<endl;
  cout<<" 0.- Salir "<<endl;
  cout<<"ingrese opcion : ";cin>>opc;

  Serie S1,S2 ;

  switch(opc)
  { case 1 :
           { S1.odi();
			   break;
		   }
    case 2 :
		{   S2.Nueve();
			   break;
	       }
    case 3 :
	       {    m3.cargarSerie3(mat3, nrow, ncol);
                m3.mostrar(mat3, nrow, ncol);
				break;
	       }
    case 4 :
	       {     m4.cargarSerie4(mat4, nrow, ncol);
                 m4.mostrar(mat4, nrow, ncol);
			   break;
	       }
  }
 }while (opc != 0);
  getch ();
}







#include "stdafx.h"
#include "conio.h"
#include <string>
#include <iostream>
#define MAX 4
using namespace std;
void cargar ( int n, string M[MAX][MAX])
{for(int a=0;a<n;a++) 
  {for (int b=0;b<n;b++)
    {cout<<"M["<<a<<"]["<<b<<"]: ";
    cin>>M[a][b];
    }
   }
  }
void mostrar( int m, string N[MAX][MAX][MAX])
{for(int a=0;a<m;a++) 
 {for (int b=0;b<m;b++)
  {for (int c=0;c<m;c++)
  
    {cout<<N[a][b][c]<<" ";
    }cout<<"  ";
   }cout<<endl;
  }cout<<endl;
 }

void traspasar ( int n, string M[MAX][MAX], string M2[MAX][MAX][MAX])
{string aux; for(int a=0;a<n;a++) 
  {for (int b=0;b<n;b++)
   {for (int c=0;c<n;c++)
{aux=M[a][b]; M2[a][b][c]=aux;
}
}}}
void main()
{ int n; string M[MAX][MAX], M2[MAX][MAX][MAX];
do {cout<<"Ingrese el tamanio de la matriz:  ";
cin>>n;
if (n<2) {cout<<"Debe tener un minimo de 2 filas y columnas para ser matriz"<<endl;}
}while (n<2);
cargar (n, M);
traspasar (n, M,M2);
mostrar (n,M2);
getch();
}





#include "stdafx.h"
#include "conio.h"
#include <iostream>
#define MAX 4
using namespace std;
void cargar (int m, int N[MAX][MAX][MAX][MAX])
{for(int a=0;a<m;a++) //esto es para cargar
 {for (int c=0;c<m;c++)
  {for (int b=0;b<m;b++)
   {for (int d=0;d<m;d++)
    {cout<<"M["<<a<<"]["<<b<<"]["<<c<<"]["<<d<<"]: ";
    cin>>N[a][b][c][d];
    }
   }
  }
 }
}
void mostrar( int m, int N[MAX][MAX][MAX][MAX])
{for(int a=0;a<m;a++) //esto es para mostrar
 {for (int c=0;c<m;c++)
  {for (int b=0;b<m;b++)
   {for (int d=0;d<m;d++)
    {cout<<N[a][b][c][d]<<" ";
    }cout<<"  ";
   }cout<<endl;
  }cout<<endl;
 }
}
void modificar ( int n, int M[MAX][MAX][MAX][MAX], int M2[MAX][MAX][MAX][MAX])
{int aux;
for(int a=0;a<n;a++) //esto es para modificar
  {for (int c=0;c<n;c++)
   {for (int d=0;d<n;d++)
    {M2[a][a][c][d]= M[n-1-a][n-1-a][c][d];
    
    M2[a][n-1-a][c][d]= M[n-1-a][a][c][d];
    }
   }
  }
for(int a=0;a<n;a++) //esto es para modificar internamente
  {for (int c=0;c<(n/2);c++)
   
    {aux=M2[a][a][c][c];M2[a][a][c][c]=M2[a][a][n-1-c][n-1-c]; M2[a][a][n-1-c][n-1-c]=aux;
    
    aux=M2[a][n-1-a][c][n-1-c];M2[a][n-1-a][c][n-1-c]= M2[a][n-1-a][n-1-c][c]; M2[a][n-1-a][n-1-c][c]=aux;
    }
   
  }
}
void main()
{ int n, M[MAX][MAX][MAX][MAX], M2[MAX][MAX][MAX][MAX];
do {cout<<"Ingrese la dimension del cubo:  ";
cin>>n;
if (n<2) {cout<<"Debe tener un minimo de 2 filas y columnas para ser matriz"<<endl;}
}while (n<2);
cargar (n, M);
mostrar (n,M);
getch();
modificar (n,M,M2);
mostrar (n,M2);
system ("pause");
}
